<Window x:Class="com.ReinforceLab.mjpeg_server.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"    
    xmlns:prop="clr-namespace:com.ReinforceLab.mjpeg_server.Properties"
    Title="mjpeg server" Height="538" Width="300">
    <StackPanel>
        
        <Image x:Name="_imageView" Width="250" Height="375" HorizontalAlignment="Center" Source="/Resources/pic_1.JPG" /> <!-- "/resources/image.png" {x:Static prop:Resources.pic_1}-->
        <TextBlock x:Name="_textbox" Text="_placeholder" Width="200" Height="25" VerticalAlignment="Center" TextAlignment="Center" HorizontalAlignment="Center" Margin="10"/>
        <ToggleButton  x:Name="_button" Width="200" Height="50" HorizontalAlignment="Center" Background="LightBlue" Click="_button_Click" Margin="5">
            <TextBlock Text="Open browser"/>
        </ToggleButton>
    </StackPanel>
</Window>
